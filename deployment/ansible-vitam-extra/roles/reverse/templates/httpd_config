    # Enable chunked mode for all requests to access-external & ingest-external
    <LocationMatch "^/(ingest|access)-external">
        SetEnv proxy-sendchunked 1
        SetEnv proxy-sendcl 0
    </LocationMatch>

    # External API for ingest-external
