[Unit]
Description=MongoDB (mongod) Database Service
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/{{mongo_bin}} --config {{mongo_config_path}}/mongod.conf
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
User={{mongo_user}}
Group={{vitam_group}}
StandardOutput=syslog
StandardError=syslog
# ulimits
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitNOFILE=64000
LimitRSS=infinity
LimitNPROC=64000

[Install]
WantedBy=multi-user.target
