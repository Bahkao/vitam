#!/usr/bin/env bash
set -e

CURRENT_DIR="$( cd "$( readlink -f $(dirname ${BASH_SOURCE[0]}) )" ; pwd )"
GRAPH_BUILDER_URL="http://{{ ip_admin }}:{{ vitam.metadata.port_admin }}/metadata/v1/graphbuilder"

function log() {
    LEVEL=${1}
    MSG=${2}
    TIMESTAMP=$( date +"%Y-%m-%d %H:%M:%S" )
    echo ${TIMESTAMP} [[vitam-metadata-graph-builder]] [vitam-metadata-graph-builder] ${LEVEL} graphbuilder.sh - vitam-metadata-graph-builder.service : [${HOSTNAME}:vitam-metadata-graph-builder.service:0] ${MSG}
}

function local_curl() {
    COLLECTION=${1}
    curl -s -X GET -H "X-Tenant-Id: {{ vitam_tenant_admin }}" -H "Content-Type: application/json" --user "${VITAM_ADMIN_AUTH}" ${GRAPH_BUILDER_URL}
    log "INFO" "${MSG}"
}

# Main
local_curl
