# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/


# where to write logging data.
systemLog:
  destination: syslog
  syslogFacility: local0
  logAppend: true


# network interfaces
net:
  port: {{ mongodb.mongos_port }}
  bindIp: {{ ip_service }}{% if groups['hosts-dev-tools'] >0 and ip_service != ip_admin %},{{ ip_admin }}{% endif %}

# operationProfiling:
sharding:
  configDB: configsvr/{% for item in groups['mongoc'] %}{{hostvars[item]['ip_service']}}:{{ mongodb.mongoc_port }}{% if not loop.last %},{% endif %}{% endfor %}


