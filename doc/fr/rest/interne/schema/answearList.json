{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "QueryAnswear",
    "description": "A typical answear in Vitam DSL",
    "type": "object",
    "required": [
        "hits",
        "context",
        "results"
    ],
    "properties": {
        "hits": {
            "description": "Contains hits related to reply",
            "type": "object",
            "properties": {
                "total": {
                    "type": "integer"
                },
                "size": {
                    "type": "integer"
                },
                "offset": {
                    "type": "integer"
                },
                "limit": {
                    "type": "integer"
                },
                "time_out": {
                    "type": "boolean"
                }
            }
        },
        "context": {
            "description": "Contains Query related to this to reply",
            "type": "object",
            "properties": {
                "$roots": {
                    "description": "Contains all root ids",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "$queries": {
                    "description": "Contains all queries",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "$filter": {
                    "description": "Contains filter to apply",
                    "type": "object",
                    "properties": {
                        "$limit": {
                            "type": "integer"
                        },
                        "$offset": {
                            "type": "integer"
                        },
                        "$orderby": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        },
                        "$hint": {
                            "type": "string"
                        },
                        "$mult": {
                            "type": "boolean"
                        }
                    }
                },
                "$projection": {
                    "description": "Contains projection to apply",
                    "type": "object",
                    "properties": {
                        "$field": {
                            "type": "object"
                        },
                        "$usage": {
                            "type": "string"
                        }
                    }
                },
                "$data": {
                    "description": "Contains data to insert",
                    "type": "object"
                },
                "$action": {
                    "description": "Contains actions to apply as update",
                    "type": "object"
                }
            }
        },
        "results": {
            "description": "Contains real list of unique identifiers",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}