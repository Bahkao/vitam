{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "CollectionList",
    "description": "A list of unique identifier when requesting a standard collection in Vitam DSL",
    "type": "object",
    "required": [
        "hits",
        "context",
        "results"
    ],
    "properties": {
        "hits": {
            "description": "Contains hits related to reply",
            "type": "object",
            "properties": {
                "total": {
                    "type": "integer"
                },
                "size": {
                    "type": "integer"
                },
                "offset": {
                    "type": "integer"
                },
                "limit": {
                    "type": "integer"
                },
                "time_out": {
                    "type": "boolean"
                },
                "next": {
                  "type": "string",
                  "description": "async id to get next offset if available (size+offset < total, else will return size=0)"
                }
            }
        },
        "context": {
            "description": "Contains Query related to this to reply",
            "type": "object",
            "properties": {
                "query": {
                    "description": "Contains the string query",
                    "type": "string"
                },
                "filter": {
                    "description": "Contains filter to apply",
                    "type": "object",
                    "properties": {
                        "$limit": {
                            "type": "integer"
                        },
                        "$offset": {
                            "type": "integer"
                        },
                        "$orderby": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    }
                }
            }
        },
        "results": {
            "description": "Contains real list of unique identifiers",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}