{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Error",
    "description": "An error message in Vitam DSL",
    "type": "object",
    "required": [
        "http_code",
        "code",
        "state"
    ],
    "properties": {
        "http_code": {
            "description": "Short code as in RFC 7231 (Http Status Codes).",
            "type": "integer"
        },
        "code": {
            "description": "Type of the asynchronous task.",
            "type": "string",
            "enum": [
                "ingest",
                "freeze",
                "disposal",
                "platform"
            ]
        },
        "state": {
            "description": "Vitam specific short code.",
            "type": "string"
        },
        "message": {
            "description": "Standard short description.",
            "type": "string"
        },
        "description": {
            "description": "Long description.",
            "type": "string"
        },
        "errors": {
            "description": "Sub error descriptions.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "$ref": "#/properties"
                }
            }
        }
    }
}