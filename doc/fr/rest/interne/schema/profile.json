{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Profile",
    "description": "A profile in Vitam DSL",
    "type": "object",
    "required": [
        "name"
    ],
    "properties": {
        "name": {
            "description": "Front-office Application name.",
            "type": "string"
        },
        "email": {
            "type": "string",
            "description": "Email address of the main contact for this Application."
        },
        "ingest_contracts": {
            "type": "array",
            "description": "Array of ingest contract ids.",
            "items": {
                "type": "string"
            }
        },
        "access_contracts": {
            "type": "array",
            "description": "Array of access contract ids.",
            "items": {
                "type": "string"
            }
        }
    }
}