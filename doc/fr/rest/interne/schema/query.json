{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Query",
    "description": "A query in Vitam DSL",
    "type": "object",
    "required": [
        "$queries"
    ],
    "properties": {
        "$roots": {
            "description": "Contains all root ids",
            "type": "array",
            "items": {
                "type": "string"
            }
        },      
        "$queries": {
            "description": "Contains all queries",
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "$filter": {
            "description": "Contains filter to apply",
            "type": "object",
            "properties": {
                "offset": {
                    "type": "integer"
                },
                "limit": {
                    "type": "integer"
                },
                "orderby": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "minItems": 1
                },
                "hint": {
                    "type": "string",
                    "enum": [
                        null, "cache", "nocache"
                      ]
                }
            }
        },
        "$projection": {
            "description": "Contains projection to apply",
            "type": "object",
            "properties": {
                "field": {
                    "type": "object"
                },
                "usage": {
                    "type": "string"
                }
            }            
        },
        "$data": {
          "description": "Contains data to insert",
          "type": "object"
        },
        "$action": {
          "description": "Contains actions to apply as update",
          "type": "object"
        }
    }
}