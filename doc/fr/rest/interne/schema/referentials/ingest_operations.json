{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "operation_groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step": {
            "type": "string",
            "enum": [ "authent", "precheck", "transfer", "global_check", "object_check", "unit_check", "finalization", "conservation", "end" ]
          },
          "operations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "substep": {
                  "type": "string"
                },
                "operation": {
                  "type": "string"
                },
                "arguments": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}