{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Storage Archival Information Package description",
  "type": "object",
  "required": [
    "id",
    "original_technical_metadata",
    "storages"
  ],
  "properties": {
    "id": {
      "description": "Storage Archival Information Package's Identifier",
      "type": "string"
    },
    "original_technical_metadata": {
      "description": "Original technical metadata preserved natively",
      "type": "object"
    },
    "storages": {
      "description": "Information on associated storages: first level is per Preservation Contract",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "contract_id": {
            "description": "Preservation Contract's Identifier",
            "type": "string"
          },
          "versions": {
            "description": "Information on associated storages: second level is per Version within the Preservation Contract",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "description": "Unique Identifier for this version",
                  "type": "string"
                },
                "technical_metadata": {
                  "description": "Technical Metadata for this version",
                  "type": "object"
                },
                "storage": {
                  "description": "Information on associated storages: third level is per Storage Offer per Version within the Preservation Contract",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "ccfn_id": {
                        "description": "Storage offer's Identifier",
                        "type": "string"
                      },
                      "storage_digest": {
                        "description": "Storage Offer associated Digest for this version",
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}