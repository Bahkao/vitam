{
  "DSL": {
    "format": "object",
    "elements": {
      "$query": {
        "format": "ref",
        "type": "QUERY",
        "optional": false,
        "hint": "Single query"
      },
      "$filter": {
        "format": "ref",
        "type": "FILTER",
        "optional": true,
        "hint": "Filters"
      },
      "$projection": {
        "format": "ref",
        "type": "PROJECTION",
        "optional": false,
        "hint": "Projections to apply on results"
      }
    }
  },
  "QUERY": {
    "format": "keychoice",
    "choices": {
      "$match": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$search": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_all": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_phrase": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_phrase_prefix": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$wildcard": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$regex": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$eq": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$exists": {
        "format": "ref",
        "type": "string"
      },
      "$ne": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$or": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Disjonction de sous-requêtes"
      },
      "$and": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Conjonction de sous-requêtes"
      },
      "$not": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Négation de sous-requêtes"
      },
      "$in": {
        "format": "anykey",
        "itemtype": {
          "format": "array",
          "itemtype": "anyvalue"
        },
        "min": 1,
        "max": 1,
        "hint": "recherche  de sous-requêtes"
      },
      "$nin": {
        "format": "anykey",
        "itemtype": {
          "format": "array",
          "itemtype": "anyvalue"
        },
        "min": 1,
        "max": 1,
        "hint": "négation de recherche de sous-requêtes"
      },
      "$range": {
        "format": "anykey",
        "itemtype": {
          "format": "anykey",
          "itemtype": "anyvalue",
          "min": 2,
          "max": 2
        },
        "hint": "intervalle de sous-requêtes"
      },
      "$gt": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$lt": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$lte": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$gte": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      }
    },
    "min": 0,
    "max": 1
  },
  "FILTER": {
    "format": "object",
    "elements": {
      "$offset": {
        "format": "ref",
        "type": "posinteger",
        "optional": true,
        "hint": "Position of results"
      },
      "$limit": {
        "format": "ref",
        "type": "posinteger",
        "optional": true,
        "hint": "Max number of results"
      },
      "$orderby": {
        "format": "anykey",
        "itemtype": {
          "format": "enum",
          "values": [
            -1,
            1
          ]
        },
        "optional": true,
        "hint": "Sorts on result"
      }
    }
  },
  "PROJECTION": {
    "format": "object",
    "elements": {
      "$fields": {
        "format": "anykey",
        "itemtype": {
          "format": "enum",
          "values": [
            1
          ]
        },
        "optional": true,
        "hint": "Fields to retrieve in the result"
      }
    }
  }
}

