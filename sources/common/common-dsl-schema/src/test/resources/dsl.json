    }
  },
  "PROJECTION": {
    "format": "keychoice",
    "choices": {
      "$fields": {
        "format": "anykey",
        "itemtype": {
          "format": "enum",
          "values": [
            0,
            1
          ]
        },
        "optional": true,
        "hint": "Fields to retrieve in the result"
      }
    }
  }
