{
  // Élément principal
  "DSL": {
    "format": "object",
    "elements": {
      // Racine de recherche
      "$roots": {
        "format": "array",
        "itemtype": "guid",
        "hint": "Tableau d'identifiants d'AU racines"
      },
      "$query": {
        "format": "typechoice",
        "choices": {
          "array": {
            "format": "array",
            "itemtype": "ROOT_QUERY"
          },
          "object": "ROOT_QUERY"
        },
        "hint": "Query or list of query"
      },
      "$filter": {
        "format": "ref",
        "type": "any",
        "optional": true
      },
      "$projection": {
        "format": "ref",
        "type": "PROJECTION"
      }
    }
  },
  "ROOT_QUERY": {
    "format": "union",
    "types": [
      "QUERY",
      {
        "format": "object",
        "elements": {
          "$depth": {
            "format": "ref",
            "type": "integer",
            "optional": true,
            "hint": "Profondeur de recherche"
          }
        }
      }
    ]
  },
  "QUERY": {
    "format": "keychoice",
    "choices": {
      "$match": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$search": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_all": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_phrase": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$match_phrase_prefix": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$wildcard": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$regex": {
        "format": "anykey",
        "itemtype": "string",
        "min": 1,
        "max": 1
      },
      "$eq": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$exists": {
        "format": "ref",
        "type": "string"
      },
      "$ne": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$or": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Disjonction de sous-requêtes"
      },
      "$and": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Conjonction de sous-requêtes"
      },
      "$not": {
        "format": "array",
        "itemtype": "QUERY",
        "min": 1,
        "hint": "Négation de sous-requêtes"
      },
      "$in": {
        "format": "anykey",
        "itemtype": {
          "format": "array",
          "itemtype": "anyvalue"
        },
        "min": 1,
        "max": 1,
        "hint": "recherche  de sous-requêtes"
      },
      "$nin": {
        "format": "anykey",
        "itemtype": {
          "format": "array",
          "itemtype": "anyvalue"
        },
        "min": 1,
        "max": 1,
        "hint": "négation de recherche de sous-requêtes"
      },
      "$range": {
        "format": "anykey",
        "itemtype": {
          "format": "anykey",
          "itemtype": "anyvalue",
          "min": 2,
          "max": 2
        },
        "hint": "intervalle de sous-requêtes"
      },
      "$gt": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$lt": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$lte": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$gte": {
        "format": "anykey",
        "itemtype": "anyvalue",
        "min": 1,
        "max": 1
      },
      "$subobject": {
        "format": "ref",
        "type": "NESTED_QUERY",
        "optional": true,
        "hint": "Subobject"
      }
    }
  },
