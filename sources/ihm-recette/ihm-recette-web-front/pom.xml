<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>fr.gouv.vitam</groupId>
        <artifactId>ihm-recette</artifactId>
        <version>0.14.0-SNAPSHOT</version>
    </parent>

    <artifactId>ihm-recette-web-front</artifactId>
    <name>ihm-recette-web-front</name>
    <packaging>jar</packaging>

    <properties>
        <unix.name>ihm-recette-front</unix.name>
        <ihm-recette.name>ihm-recette</ihm-recette.name>
        <unix.user>vitam</unix.user>
        <unix.group>vitam</unix.group>
    </properties>


    <build>
        <plugins>

            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>bower_components</directory>
                        </fileset>
                        <fileset>
                            <directory>node_modules</directory>
                        </fileset>
                        <fileset>
                            <directory>dist</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <!-- NB! Set <version> to the latest released version of frontend-maven-plugin, like in README.md -->
                <version>1.3</version>

                <configuration>
                    <installDirectory>target</installDirectory>
                </configuration>

                <executions>

                    <execution>
                        <id>install node and npm</id>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <configuration>
                            <nodeVersion>v6.9.1</nodeVersion>
                            <npmVersion>2.15.9</npmVersion>

                            <serverId>vitam</serverId>

                            <!-- This is not a mirror of node, if you update the version, please contact integration team -->
                            <downloadRoot>https://dev.programmevitam.fr/nexus/content/sites/node-dist-mirror/</downloadRoot>

                        </configuration>
                    </execution>

                    <execution>
                        <id>npm install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>

                    <execution>
                        <id>gulp_package</id>
                        <goals>
                            <goal>gulp</goal>
                        </goals>

                        <phase>package</phase>

                        <configuration>
                            <arguments>package</arguments>
                            <environmentVariables>
                                <pomVersion>${pom.version}</pomVersion>
                            </environmentVariables>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <executions>
                    <execution>
                        <id>executable pom</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy-file</goal>
                        </goals>
                        <configuration>
                            <!-- <packaging>zip</packaging>
                            <artifactId>${project.artifactId}</artifactId>
                            <groupId>${project.groupId}</groupId>
                            <version>${project.version}</version> -->
                            <classifier>zip</classifier>
                            <file>
                                target/ihm-recette-${project.version}.zip
                            </file>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1.5</version>
                <configuration>
                    <name>vitam-${unix.name}</name>
                    <disabled>false</disabled>
                    <licence>CeCILL 2.1</licence>
                    <distribution>Vitam Project</distribution>
                    <group>Application/Archiving</group>
                    <packager>Vitam Package Team</packager>
                    <defineStatements />
                    <targetOS>linux</targetOS>
                    <requires>
                        <require>systemd</require>
                        <require>java-1.8.0</require>
                        <require>vitam-user-${unix.user}</require>
                    </requires>
                    <defaultDirMode>750</defaultDirMode>
                    <defaultFileMode>640</defaultFileMode>
                    <defaultUsername>${unix.user}</defaultUsername>
                    <defaultGroupname>${unix.group}</defaultGroupname>
                    <mappings>
                        <mapping>
                            <directory>/vitam/app/${ihm-recette.name}</directory>
                            <sources>
                                <source>
                                    <location>${project.basedir}/dist</location>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <!-- Systemd hook scriptlets -->
                    <postinstallScriptlet>
                        <script>%systemd_post vitam-${unix.name}.service</script>
                    </postinstallScriptlet>
                    <preremoveScriptlet>
                        <script>%systemd_preun vitam-${unix.name}.service</script>
                    </preremoveScriptlet>
                    <postremoveScriptlet>
                        <script>%systemd_postun vitam-${unix.name}.service</script>
                    </postremoveScriptlet>
                </configuration>
            </plugin>

        </plugins>
    </build>


</project>
